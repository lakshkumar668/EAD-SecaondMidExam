<!DOCTYPE html>
<html lang="en">
<style>
  #form {
    margin-top: 20px;
    width: 200;
    height: 200;
    border: 1px solid;
  }
</style>

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
  <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.0.0/mdb.min.css" rel="stylesheet" />
  <title>Home Page</title>
</head>

<body>

  <form method="POST" action="/display" id="form" enctype="multipart/form-data">
    <Grid container spacing={10}>
      <Grid item xs={2}>
        <!-- image -->
        <div class="col">
          <input type="file" name="profilepic" accept=".png,.jpg" />
        </div>
      </Grid>
      <Grid>
        <!-- 2 column grid layout with text inputs for the first and last names -->
        <div class="row mb-4">

          <!-- fullname input -->
          <div class="col">
            <div class="form-outline">
              <input type="text" id="form6Example1" class="form-control" name="fullname" />
              <label class="form-label" for="form6Example1">Full name</label>
            </div>
          </div>
          <!-- Email input -->
          <div class="col">
            <div class="form-outline">
              <input type="text" id="form6Example2" class="form-control" name="email" />
              <label class="form-label" for="form6Example2">Email</label>
            </div>
          </div>
        </div>
        <div class="row mb-4">
          <!-- phone input -->
          <div class="col">
            <div class="form-outline">
              <input type="text" id="form6Example1" class="form-control" name="phone" />
              <label class="form-label" for="form6Example1">Phone Number</label>
            </div>
          </div>
          <!-- country input -->
          <div class="col">
            <div class="form-outline">
              <input type="text" id="form6Example2" class="form-control" name="country" />
              <label class="form-label" for="form6Example2">Country</label>
            </div>
          </div>
        </div>
        <div class="row mb-4">
          <!-- state input -->
          <div class="col">
            <div class="form-outline">
              <input type="text" id="form6Example1" class="form-control" name="state" />
              <label class="form-label" for="form6Example1">State/Region</label>
            </div>
          </div>
          <!-- city input -->
          <div class="col">
            <div class="form-outline">
              <input type="text" id="form6Example2" class="form-control" name="city" />
              <label class="form-label" for="form6Example2">City</label>
            </div>
          </div>
        </div>


        
        <div class="row mb-1">
          <!-- address input -->
          <div class="col">
            <div class="form-outline">
              <input type="text" id="form6Example1" class="form-control" name="address" />
              <label class="form-label" for="form6Example1">Address</label>
            </div>
          </div>
          <!-- zip input -->
          <div class="col">
            <div class="form-outline">
              <input type="text" id="form6Example2" class="form-control" name="zip" />
              <label class="form-label" for="form6Example2">Zip</label>
            </div>
          </div>
        </div>
        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">add</button>
  </form>
  <!-- MDB -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.0.0/mdb.min.js"></script>
</body>

</html>